{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "./*.ts",
    "next.config.ts",
    "next.config.ts",
    "server/utils/auth.ts",
    "playwright/config/playwright.config.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}